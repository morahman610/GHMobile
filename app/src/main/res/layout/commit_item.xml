<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp"
    android:orientation="vertical"
    app:cardCornerRadius="20dp"
    android:backgroundTint="@color/comit_item_bg"
    app:cardElevation="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp">
        <TextView
            android:id="@+id/commitAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            style="@style/commitItemTxt"
            tools:text="Commit Author"/>
        <TextView
            android:id="@+id/commitHash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            style="@style/commitItemTxt"
            android:textColor="@color/commit_hash"
            tools:text="Commit hash"/>
        <TextView
            android:id="@+id/commitMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/commitItemTxt"
            android:textColor="@color/commit_message"
            tools:text="Commit Message"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>